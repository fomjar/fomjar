<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.0.0.xsd">
    <id>package</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
        	<directory>../../fomjar/fomjar-server/bin</directory>
            <outputDirectory>${project.artifactId}/bin</outputDirectory>
        </fileSet>
        <fileSet>
        	<directory>lib</directory>
            <outputDirectory>${project.artifactId}/lib</outputDirectory>
        </fileSet>
        <fileSet>
        	<directory>../../fomjar/fomjar-server/conf</directory>
            <outputDirectory>${project.artifactId}/conf</outputDirectory>
        </fileSet>
        <fileSet>
        	<directory>conf</directory>
            <outputDirectory>${project.artifactId}/conf</outputDirectory>
        </fileSet>
        <fileSet>
        	<directory>../../fomjar/fomjar-server/tools</directory>
            <outputDirectory>${project.artifactId}/tools</outputDirectory>
        </fileSet>
    </fileSets>
	<files>
		<file>
			<source>target/${project.artifactId}-${project.version}.jar</source>
			<outputDirectory>${project.artifactId}/task</outputDirectory>
		</file>
	</files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>${project.artifactId}/lib</outputDirectory>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>