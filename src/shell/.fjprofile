alias ll='ls -l'
alias ..='cd ..'
alias ...='cd ../..'

fjbase=~/Documents/fomjar/src/fomjar
fjbin=~/Documents/fomjar/src/shell/bin

ski_lbase=~/Documents/fomjar/src/ski
ski_rbase=/home/ski/ski
ski_host=ski.craftvoid.com
ski_user=ski
ski_pass=ski
ski_rootpass=ski-1234

PATH=${fjbin}:${PATH}

function cdfj() {
    mod=$1
    cd ${fjbase}
    if [ "" != "${mod}" ]; then
        cd fomjar-${mod}
    fi
}

function cdski() {
    mod=$1
    cd ${ski_lbase}
    if [ "" != "${mod}" ]; then
        cd ski-${mod}
    fi
}

function sshski() {
    expect ${fjbin}/fjssh ${ski_host} root ${ski_rootpass}
}

function scpskiconfall() {
   scpskiconf cdb
   scpskiconf wsi
   scpskiconf wca
   scpskiconf bcs
   scpskiconf mma
}

function scpskiconf() {
    mod=$1
    expect ${fjbin}/fjscp ${ski_host} ${ski_user} ${ski_pass} *.conf ${ski_rbase}/ski-${mod}/conf
}

function scpskitask() {
    mod=$1
    expect ${fjbin}/fjscp ${ski_host} ${ski_user} ${ski_pass} *.jar ${ski_rbase}/ski-${mod}/task
}

function scpskiliball() {
   scpskilib cdb
   scpskilib wsi
   scpskilib wca
   scpskilib bcs
   scpskilib mma
}

function scpskilib() {
    mod=$1
    expect ${fjbin}/fjscp ${ski_host} ${ski_user} ${ski_pass} *.jar ${ski_rbase}/ski-${mod}/lib
}

